<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="noteItem"
            type="com.example.protosuite.data.db.entities.NoteItem" />
        <variable
            name="clickListener"
            type="com.example.protosuite.adapters.NoteListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/note_item_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:elevation="2dp"
        android:onClick="@{(view) -> clickListener.onClick(noteItem,view)}"
        android:background="@drawable/rounded_corners"
        android:transitionName="@{@string/note_transition_name(noteItem.id)}">

        <TextView
            android:id="@+id/drag_drop_image"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_baseline_drag_indicator_24" />

        <ImageView
            android:id="@+id/play_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:contentDescription="TODO"
            android:onClick="@{() -> null}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

        <TextView
            android:id="@+id/note_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:hint="Description is empty"
            android:maxLines="3"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="@{noteItem.description}"
            android:textSize="16sp"
            android:transitionName="@{@string/note_description_TN(noteItem.id)}"
            app:layout_constraintEnd_toStartOf="@+id/play_image"
            app:layout_constraintStart_toEndOf="@+id/drag_drop_image"
            app:layout_constraintTop_toBottomOf="@+id/note_item_title" />

        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:hint="Title is empty"
            android:maxLines="2"
            android:padding="4dp"
            android:text="@{noteItem.title}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/play_image"
            app:layout_constraintStart_toEndOf="@+id/drag_drop_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/note_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>